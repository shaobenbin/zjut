/******************************************************************************/
/*           create table zjut_videos                                         */
/******************************************************************************/
create table ZJUT_VIDEOS
(
  id             NUMBER(12) not null,
  title          VARCHAR2(1000),
  author         VARCHAR2(200),
  is_valid       VARCHAR2(1),
  source         VARCHAR2(200),
  browse_count   NUMBER(12),
  context        CLOB,
  video_path     VARCHAR2(2000),
  create_date    DATE,
  create_user_id NUMBER(12),
  modify_date    DATE,
  modify_user_id NUMBER(12),
  sts            VARCHAR2(1)
);
alter table ZJUT_VIDEOS
  add constraint PK_ZJUT_VIDEOS primary key (ID);
  
